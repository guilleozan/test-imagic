                </div>
                <div class="slider-component">
                    
                    <swiper-container">
                        <div class="swiper-wrapper">
                    
                        <swiper-container>
                        <swiper-slide><img src="{{ url('static/images/photos/1.png') }}" alt="Image 1"></swiper-slide>
                        <swiper-slide><img src="{{ url('static/images/photos/2.png') }}" alt="Image 1"></swiper-slide>
                        <swiper-slide><img src="{{ url('static/images/photos/3.png') }}" alt="Image 1"></swiper-slide>
